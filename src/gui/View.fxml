<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="184.0" prefWidth="338.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Calculate sum">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <TextField fx:id="txtNumber1" layoutX="14.0" layoutY="47.0" promptText="First Number" />
      <TextField fx:id="txtNumber2" layoutX="14.0" layoutY="80.0" promptText="Second Number" />
      <Button fx:id="btSum" layoutX="14.0" layoutY="112.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="14.0" layoutY="150.0" text="Result:" />
      <Label fx:id="labelResult" layoutX="54.0" layoutY="150.0" />
      <ComboBox fx:id="comboBox" layoutX="174.0" layoutY="47.0" onAction="#onComboBoxAction" prefWidth="150.0" promptText="Select a person..." />
      <Button fx:id="btShowAll" layoutX="218.0" layoutY="80.0" mnemonicParsing="false" onAction="#onBtShowAllAction" text="Show All" />
   </children>
</AnchorPane>
